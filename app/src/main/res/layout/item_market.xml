<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_market"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_8"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_market_photo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/ic_activity"/>

        <TextView
            android:id="@+id/tv_market_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_market_photo"
            android:layout_margin="@dimen/margin_12"
            android:gravity="center_vertical"
            android:text="商品名称"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/size_txt_title_small"/>

        <ImageView
            android:id="@+id/iv_market_price"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/tv_market_name"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_market_price"
            android:layout_below="@id/tv_market_name"
            android:layout_toRightOf="@id/iv_market_price"
            android:text="15.00"
          />

        <TextView
            android:id="@+id/tv_market_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignBottom="@id/iv_market_price"
            android:layout_toLeftOf="@+id/tv_market_time"
            android:layout_toStartOf="@+id/tv_market_time"
            android:text="发布者"/>

        <TextView
            android:id="@+id/tv_market_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_market_price"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_8"
            android:text="时间"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>


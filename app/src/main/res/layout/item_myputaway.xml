<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_myputaway"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_8"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp">

    <!--我的上架-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/iv_myputaway_photo"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/ic_activity"/>

        <TextView
            android:id="@+id/tv_myputaway_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_myputaway_photo"
            android:layout_margin="@dimen/margin_12"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="商品名称"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/size_txt_title_small"/>

        <ImageView
            android:id="@+id/iv_myputaway_total"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/tv_myputaway_name"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_myputaway_price"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_below="@id/tv_myputaway_name"
            android:layout_toRightOf="@id/iv_myputaway_total"
            android:text="15.20"/>

        <Button
            android:id="@+id/btn_downaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv_myputaway_name"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/tv_myputaway_name"
            android:gravity="center"
            android:text="下架"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
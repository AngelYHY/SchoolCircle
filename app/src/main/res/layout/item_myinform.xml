<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_myinform"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin_8"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_myinform_image"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:layout_weight="1.5"
            android:background="@drawable/ic_activity"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_16">

                <TextView
                    android:id="@+id/tv_myinform_name"
                    style="@style/CardTextTitle"
                    android:layout_marginTop="@dimen/margin_8"
                    android:gravity="center_vertical"
                    android:text="商品名称"/>

                <TextView
                    android:id="@+id/tv_myinform_status"
                    style="@style/CardTextContent"
                    android:layout_below="@id/tv_myinform_name"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="未处理订单"/>

                <TextView
                    android:id="@+id/tv_myinfrom_total"
                    style="@style/CardTextContent"
                    android:layout_below="@id/tv_myinform_status"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="总价:"/>

                <ImageView
                    android:id="@+id/iv_myinform_price"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/ic_launcher"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_alignBottom="@id/tv_myinfrom_total"
                    android:layout_toRightOf="@id/tv_myinfrom_total"/>

                <TextView
                    android:id="@+id/tv_myinform_price"
                    style="@style/CardTextContent"
                    android:layout_below="@id/tv_myinform_status"
                    android:layout_toRightOf="@id/iv_myinform_price"
                    android:layout_marginLeft="@dimen/margin_8"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="150.00"/>

                <TextView
                    android:id="@+id/tv_myinform_address"
                    style="@style/CardTextContent"
                    android:layout_below="@id/tv_myinform_price"
                    android:layout_marginTop="@dimen/margin_8"
                    android:text="地址："/>

                <TextView
                    android:id="@+id/tv_myinform_location"
                    style="@style/CardTextContent"
                    android:layout_below="@id/tv_myinform_address"
                    android:layout_marginTop="@dimen/margin_8"
                    android:background="@null"
                    android:lines="2"
                    android:text="学校操场"/>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
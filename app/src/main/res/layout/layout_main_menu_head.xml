<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/menu_logo"
        android:scaleType="fitXY"/>

    <com.myschool.schoolcircle.lib.CircleImageView
        android:id="@+id/iv_user_head"
        android:layout_width="@dimen/head_size"
        android:layout_height="@dimen/head_size"
        android:layout_marginTop="@dimen/margin_56"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_big_head"
        app:border_width="2dp"
        app:border_color="@color/white"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_12"
        android:text="@string/menu_user_name"
        android:textSize="@dimen/size_txt_title_small"
        android:textColor="@color/white"
        android:layout_below="@id/iv_user_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_8"/>
</RelativeLayout>